<h1>New review for &laquo; <%= @book.TitleArticle %> <%= @book.Title %> &raquo;</h1>

<%= form_for @review do |f| %>

  <%= f.label :title %><br />
  <%= f.text_field :title %>
<br />
  <%= f.label :content %><br />
  <%= f.text_area :content %>
<br />
  <%= f.hidden_field :book_id, {:value => @book.id} %>
<br />
  <%= f.submit %>

<% end %>

<%= link_to 'Back', reviews_path %>
